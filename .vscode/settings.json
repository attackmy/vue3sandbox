{
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.insertSpaces": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "[css]": {
    "editor.tabSize": 2
  },
  "html.format.wrapAttributes": "force-expand-multiline", // 2つ以上属性はすべて改行する
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features", // Prettierを使用しない
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features", // Prettierを使用しない
    "editor.tabSize": 2,
  }
}
